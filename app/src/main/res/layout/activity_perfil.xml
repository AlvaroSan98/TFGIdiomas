<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/tv_nombre_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alvaro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002"
        android:textSize="28sp"
        android:textColor="@color/color_on_background" />

    <TextView
        android:id="@+id/tv_idioma_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Idioma: inglés"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_perfil"
        app:layout_constraintVertical_bias="0.068" />

    <TextView
        android:id="@+id/tv_colecciones_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colecciones: 10"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_idioma_perfil"
        app:layout_constraintTop_toBottomOf="@+id/tv_idioma_perfil"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/tv_palabras_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palabras: 250"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_colecciones_perfil"
        app:layout_constraintTop_toBottomOf="@+id/tv_colecciones_perfil"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Últimas partidas:"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_palabras_perfil"
        app:layout_constraintTop_toBottomOf="@+id/tv_palabras_perfil"
        app:layout_constraintVertical_bias="0.06999999"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_partidas_perfil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

</androidx.constraintlayout.widget.ConstraintLayout>